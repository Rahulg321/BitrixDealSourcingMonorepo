{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "declarationMap": false,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "functions/src/index.js"
  ],
  "baseUrl": ".",
  "paths": {
    "@/*": ["./*"]
  },
  "exclude": ["node_modules"]
}
